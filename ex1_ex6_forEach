package ex1_array;

public class Ex6_forEach {
	public static void main(String[] args) {
		//향상된 for문
		//jdk 1.5부터 추가된 문법으로
		//배열과 컬렉션의 모든 요소를 참조하기 위한 반복문
		
		//기본형
		//for(배열의 타입 변수이름 : 배열){
		//	실행코드
		//}
		
		//for문을 실행할 반복대상이 있으면 변수는 반복대상이 지닌
		//자료형과 같은 타입으로 지정해야 함
		
		//반복 대상의 요소를 하나씩 꺼내서 변수에 직접 대입을 하고
		//반복 대상의 길이만큼 꺼내어 반복한다.
		
		int[] score= {90,92,93};
		
		int sum=0;
		double avg=0;
		
		for(int s: score) {
			sum=sum+s;
		}
		avg=(double)sum/3;
		
		System.out.printf("더한 모든 점수 : %d, 평균 : %.1f",sum,avg);
		
		
	}

}
