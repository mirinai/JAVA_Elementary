		/*
		 *	조건식이 참일 때 할 명령
		 * }
		 * else{
		 * 	조건식이 거짓일 때 실행할 명령
		 * 
		 * }
		 */
		int num=5;
		
		if (num>4) {
			System.out.println(num+"은 4보다 크다");
		}
		else {
			System.out.println(num+"은 4보다 작다");
		
		
		}
		int a=4,b=10;
		if (a>b) {
			System.out.println("a가 b보다 크다");
		}
		else {
			System.out.println("a가 b보다 작다");
		}
		
		System.out.println("----------------------------");
