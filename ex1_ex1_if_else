		System.out.print("공의 개수 : ");
		int ball=sc.nextInt();
		
		int box=0;
		
		if (ball%5==0) {
			box=ball/5;
			
		
		}
		else {
			box=ball/5+1;
		}
		System.out.println("필요한 박스 : "+box);

