package ex1_if;

import java.util.Scanner;

public class Ex1_if {
	public static void main(String[] args) {
		//제어문
		/*제어문은 실행문의 순서를 변경하는 것으로 조건문과 반복문이 존재
		 * 
		 * 조건문 : if, switch
		 * 반복문 : for, while, do-while
		 * 
		 * 
		 * 조건문 : 결과가 참, 거짓으로 반환되는 식
		 * 비교,논리
		 * 
		 * 기본형
		 * 
		 * if (조건식(비교 또는 논리, 논리형 자료형이 들어감)) {
		 * 		조건식이 참일때 실행할 명령1
		 * 		조건식이 참일때 실행할 명령2
		 * 		조건식이 참일때 실행할 명령3
		 * }
		 * 
		 * 
		 */
		
		int result=0;
		if (3>2)result=3;
		System.out.println("result : "+result);
		
		Scanner sc = new Scanner(System.in);
		System.out.print("나이를 입력 : ");
		int age=sc.nextInt();
		
		
		if (age>19) {
			System.out.println("어른");
		}
		else System.out.println("어른 아님");
		System.out.println("프로그램 끝냄");
		
		
	}

}
